pkgname=peyote
pkgver=0.0.1rc1
pkgrel=1
pkgdesc="an open source guitar tab creator"
arch=('any')
url="https://github.com/FreaxMATE/peyote"
license=('GPL3')
depends=('gtk3' 'glib2')
makedepends=('git' 'meson' 'ninja')
optdepends=()
source=("$pkgname.tar.gz::https://github.com/FreaxMATE/$pkgname/archive/v$pkgver.tar.gz")
sha512sums=('3f1b747db9f40e24e91d9799f8493351dfd8957a6ae91c4dfe395ecd601b97f51f20716d13e0fc14f162f38be62b835a24fdf3be3d2ff91f58cd3c9c18f1667f')

build() {
	cd "$pkgname-$pkgver"
   meson build --prefix=/usr
   ninja -C build
}

package() {
  cd "$pkgname-$pkgver"
  DESTDIR="${pkgdir}" ninja -C build install
}

