pkgname=peyote
pkgver=0.0.1rc3
pkgrel=1
pkgdesc="an open source guitar tab creator"
arch=('any')
url="https://github.com/FreaxMATE/peyote"
license=('GPL3')
depends=('gtk3' 'glib2')
makedepends=('git' 'meson' 'ninja')
optdepends=()
source=("$pkgname.tar.gz::https://github.com/FreaxMATE/$pkgname/archive/v$pkgver.tar.gz")
sha512sums=('81117512bb8d9fb68fc0aa82cb99a9b5aab64e22732f02f1cd73971fa9c30a12d5df3018971507491537a693653266c924cb735e0aa6d42442ad2bdae713ac46')

build() {
	cd "$pkgname-$pkgver"
   meson build --prefix=/usr
   ninja -C build
}

package() {
  cd "$pkgname-$pkgver"
  DESTDIR="${pkgdir}" ninja -C build install
}

