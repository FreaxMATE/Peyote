pkgname=peyote
pkgver=0.0.1rc3
pkgrel=1
pkgdesc="an open source guitar tab creator"
arch=('any')
url="https://github.com/FreaxMATE/peyote"
license=('GPL3')
depends=('gtk3' 'glib2')
makedepends=('git' 'meson' 'ninja')
optdepends=()
source=("$pkgname.tar.gz::https://github.com/FreaxMATE/$pkgname/archive/v$pkgver.tar.gz")
sha512sums=('26cc5282c5591a183df992706ac7cf87100cc3c1ff73d28ebf4f77fba1d0b37c55f486a19e7c58e5017fecd410eb67086f6046811098039dc133d178ca318b85')

build() {
	cd "$pkgname-$pkgver"
   meson build --prefix=/usr
   ninja -C build
}

package() {
  cd "$pkgname-$pkgver"
  DESTDIR="${pkgdir}" ninja -C build install
}

